{
  "name": "ubud",
  "description": "Premium Ghost CMS Theme",
  "demo": "https://ubud.aspirethemes.com/",
  "version": "1.1.1",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "keywords": [
    "ghost-theme"
  ],
  "scripts": {
    "postinstall": "bower install"
  },
  "dependencies": {
    "@primer/css": "^21.0.8",
    "clipboard": "^2.0.11",
    "concat": "^3.0.0",
    "evil-icons": "^1.10.1",
    "fs": "0.0.2",
    "gulp-concat": "^2.6.1",
    "lazysizes": "^5.3.2",
    "normalize.css": "^8.0.1",
    "prismjs": "^1.29.0",
    "sass-mq": "^6.0.0",
    "tocbot": "^4.21.1"
  },
  "devDependencies": {
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-jshint": "^2.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.4",
    "gulp-rtlcss": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-size": "^4.0.1",
    "gulp-uglify": "^3.0.2",
    "gulp-zip": "^5.1.0",
    "jshint": "^2.13.6",
    "jshint-stylish": "^2.2.1",
    "run-sequence": "^2.2.1",
    "sass": "^1.66.1"
  },
  "author": {
    "name": "Aspire Themes",
    "email": "ahmad@aspirethemes.com",
    "url": "https://aspirethemes.com/"
  },
  "config": {
    "custom": {
      "instagram_page": {
        "type": "text",
        "default": ""
      },
      "youtube_page": {
        "type": "text",
        "default": ""
      },
      "linkedin_page": {
        "type": "text",
        "default": ""
      },
      "telegram_page": {
        "type": "text",
        "default": ""
      },
      "mastodon_page": {
        "type": "text",
        "default": ""
      },
      "discord_page": {
        "type": "text",
        "default": ""
      },
      "show_search": {
        "type": "boolean",
        "default": true
      },
      "homepage_layout_style": {
        "type": "select",
        "options": [
          "Image Left",
          "Image Right",
          "Image Circle Small",
          "Image Circle Medium",
          "Image Circle Large",
          "Image Circle xLarge",
          "Image Center",
          "Image Wide",
          "Image Full"
        ],
        "default": "Image Left",
        "group": "homepage"
      },
      "number_of_featured_posts": {
        "type": "text",
        "default": "all",
        "group": "homepage"
      },
      "number_of_recent_posts": {
        "type": "text",
        "default": "3",
        "group": "homepage"
      },
      "show_table_of_contents_on_all_posts": {
        "type": "boolean",
        "default": false,
        "group": "post"
      },
      "show_table_of_contents_on_all_pages": {
        "type": "boolean",
        "default": false,
        "group": "post"
      }
    },
    "card_assets": {
      "exclude": [
        "button",
        "blockquote",
        "bookmark",
        "image",
        "gallery"
      ]
    },
    "posts_per_page": 10,
    "image_sizes": {
      "profile-image-small": {
        "width": 128
      },
      "profile-image-large": {
        "width": 320
      },
      "home-image-default": {
        "width": 1080
      },
      "home-image-circle-small": {
        "width": 192
      },
      "home-image-circle--medium": {
        "width": 256
      },
      "home-image-circle--large": {
        "width": 384
      },
      "home-image-circle--xlarge": {
        "width": 512
      },
      "home-image-center": {
        "width": 1462
      },
      "home-image-wide-small": {
        "width": 536
      },
      "home-image-wide-medium": {
        "width": 1120
      },
      "home-image-wide-large": {
        "width": 2240
      },
      "feature-image": {
        "width": 730
      },
      "feature-image-large": {
        "width": 1460
      }
    }
  }
}
