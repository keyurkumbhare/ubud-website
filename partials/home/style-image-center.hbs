{{!-- Homepage / Image Center Style --}}

{{#page}}
  <div class='o-grid'>
    <div class='o-grid__col o-grid__col--center o-grid__col--9-10-m o-grid__col--2-3-l'>
      <div class='c-home-center'>
        {{#if feature_image}}
          <div class='c-home-center__media'>
            <img class='c-home-center__image lazyload' src='{{ img_url feature_image size='home-image-center' format='webp' }}' alt='{{ @site.title }}'>
          </div>
        {{/if}}

        <div class='c-home-center__content'>
          <section class='c-content'>
            {{ content }}

            {{> home/subscribe-form }}
          </section>
        </div>
      </div>
    </div>
  </div>
{{/page}}